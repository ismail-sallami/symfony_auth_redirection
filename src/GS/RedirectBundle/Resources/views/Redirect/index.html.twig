{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Redirect list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sourceurl</th>
                <th>Destinationurl</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('redirect_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sourceURL }}</td>
                <td>{{ entity.destinationURL }}</td>
                <td>{{ entity.active }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('redirect_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('redirect_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('redirect_redirect', { 'source': entity.sourceURL }) }}">Redirect</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('redirect_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
